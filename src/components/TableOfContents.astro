---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;
---

{
  headings.length > 0 && (
    <nav class="toc mb-8 p-4 bg-secondary-50 dark:bg-secondary-800/50 rounded-xl">
      <h2 class="text-lg font-semibold mb-3">Table of Contents</h2>
      <ul class="space-y-2">
        {headings.map((heading) => (
          <li class={`ml-${(heading.depth - 1) * 4}`}>
            <a
              href={`#${heading.slug}`}
              class="text-secondary-600 dark:text-secondary-400 hover:text-primary-600 dark:hover:text-primary-400"
            >
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}

